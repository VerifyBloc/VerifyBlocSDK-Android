<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">
    <Button
        android:id="@+id/btn_start_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:text="Start"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start_test">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <!--模式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/shape_rect_area"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Style"/>
                <RadioGroup
                    android:id="@+id/rg_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_theme_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Dark"/>
                    <RadioButton
                        android:id="@+id/rb_theme_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"/>
                </RadioGroup>
            </LinearLayout>
            <!--主题颜色-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/shape_rect_area"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Color (RGB Hex)"/>
                <EditText
                    android:id="@+id/et_main_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="39DC97"/>
            </LinearLayout>
            <!--底部按钮背景颜色-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/shape_rect_area"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button background color"/>
                <RadioGroup
                    android:id="@+id/rg_button_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_button_bg_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default"/>
                    <RadioButton
                        android:id="@+id/rb_button_bg_pure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Pure Color"/>
                    <RadioButton
                        android:id="@+id/rb_button_bg_gradient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gradient（Horizontal）"/>
                </RadioGroup>
                <EditText
                    android:id="@+id/et_button_pure_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="39DC97"/>
                <LinearLayout
                    android:id="@+id/layout_button_gradient_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/et_button_gradient_begin_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gradient Begin：39DC97"/>
                    <EditText
                        android:id="@+id/et_button_gradient_end_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gradient End：39DC97"/>
                </LinearLayout>
            </LinearLayout>
            <!--底部按钮文字颜色-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/shape_rect_area"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button text color"/>
                <EditText
                    android:id="@+id/et_button_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="39DC97"/>
            </LinearLayout>
            <!--底部按钮圆角-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/shape_rect_area"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button Radius"/>
                <EditText
                    android:id="@+id/et_button_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:hint="12"/>
            </LinearLayout>
            <!--用户名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:background="@drawable/shape_rect_area"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Id"/>
                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test123"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>