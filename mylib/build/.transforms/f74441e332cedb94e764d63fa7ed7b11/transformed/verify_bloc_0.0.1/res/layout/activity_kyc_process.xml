<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.activity.KycProcessActivity"
    android:background="@color/background">
    <network.mintex.module_kyc.ui.widget.CustomNaviBar
        android:id="@+id/start_kyc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_left="@mipmap/navi_close"
        app:title=""/>
    <ImageView
        android:id="@+id/iv_top_mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start_kyc_title"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/kyc_start_kyc_top_mask"/>
    <ImageView
        android:id="@+id/iv_mid_mask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start_kyc_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:src="@mipmap/kyc_start_kyc_mid_mask"/>
    <ImageView
        android:id="@+id/iv_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start_kyc_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:src="@mipmap/kyc_process_start_top"/>
    <TextView
        android:id="@+id/tv_starting_kyc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_top_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        style="@style/font_22_bold"
        android:textColor="#f2f2f2"
        android:text="@string/kyc_process_start_kyc"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_verify_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_starting_kyc"
        android:layout_marginTop="32dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="19dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@mipmap/kyc_verify_content_bg"/>
        <TextView
            android:id="@+id/tv_verify_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@mipmap/kyc_verify_title_bg"
            style="@style/font_16_bold"
            android:textColor="#f2f2f2"
            android:text="@string/kyc_process_verify_identity"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>
        <TextView
            android:id="@+id/tv_thing_we_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_verify_title"
            android:layout_marginStart="32dp"
            style="@style/font_14_regular"
            android:textColor="#c4c4c4"
            android:text="@string/kyc_process_things_we_need"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:paddingStart="20dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_thing_we_need"
            android:layout_marginTop="22dp">
            <TextView
                android:id="@+id/tv_id_or_passport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/kyc_passport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:drawablePadding="12dp"
                style="@style/font_14_regular"
                android:textColor="#c4c4c4"
                android:text="@string/kyc_process_id_or_passport"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_selfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_id_or_passport"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableTop="@mipmap/kyc_selfie"
                android:drawablePadding="12dp"
                android:layout_marginStart="37dp"
                style="@style/font_14_regular"
                android:textColor="#c4c4c4"
                android:text="@string/kyc_process_selfie"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_full_legal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_selfie"
                app:layout_constraintTop_toTopOf="parent"
                android:drawableTop="@mipmap/kyc_full_legal_name"
                android:drawablePadding="12dp"
                android:layout_marginStart="37dp"
                style="@style/font_14_regular"
                android:textColor="#c4c4c4"
                android:text="@string/kyc_process_full_legal_name"
                android:gravity="center_horizontal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_verify_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shape_rect_r10_bg1c212b">
        <ImageView
            android:id="@+id/iv_sand_glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginStart="24dp"
            android:src="@mipmap/kyc_sandglass"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_sand_glass"
            app:layout_constraintBottom_toBottomOf="@id/iv_sand_glass"
            app:layout_constraintStart_toEndOf="@id/iv_sand_glass"
            android:layout_marginStart="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_selfie"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/font_14_regular"
                android:textColor="#c4c4c4"
                android:text="@string/kyc_process_estimated_review_time"/>
            <TextView
                android:id="@+id/tv_estimated_review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_14_regular"
                android:textColor="#f2f2f2"
                android:text="7 days"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_start_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="42dp"
        android:background="@mipmap/bottom_button_bg"
        android:gravity="center"
        style="@style/font_14_regular"
        android:textColor="#FFFFFF"
        android:text="@string/kyc_process_start_now"/>
</androidx.constraintlayout.widget.ConstraintLayout>