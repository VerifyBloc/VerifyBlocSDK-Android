<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/powered_by_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/power_by_dark"
            android:tag="@string/kyc_tag_power_by"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/powered_by_icon"
            app:layout_constraintTop_toTopOf="@id/powered_by_icon"
            app:layout_constraintBottom_toBottomOf="@id/powered_by_icon"
            android:layout_marginEnd="4dp"
            style="@style/font_14_regular"
            android:textColor="#899995"
            android:text="@string/powered_by"
            android:tag="@string/kyc_tag_item_desc"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/powered_by_icon"
            app:layout_constraintTop_toTopOf="@id/powered_by_icon"
            app:layout_constraintBottom_toBottomOf="@id/powered_by_icon"
            android:layout_marginStart="4dp"
            style="@style/font_14_bold"
            android:textColor="#000000"
            android:text="@string/verify"
            android:tag="@string/kyc_tag_item_title"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_verify"
            app:layout_constraintTop_toTopOf="@id/powered_by_icon"
            app:layout_constraintBottom_toBottomOf="@id/powered_by_icon"
            style="@style/font_14_regular"
            android:textColor="#000000"
            android:text="@string/bloc"
            android:tag="@string/kyc_tag_item_title"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>
</LinearLayout>