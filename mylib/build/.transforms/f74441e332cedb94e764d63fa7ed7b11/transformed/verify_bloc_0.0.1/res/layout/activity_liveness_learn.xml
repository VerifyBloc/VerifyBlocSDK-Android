<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SelfieLearnActivity"
    android:background="@color/background"
    android:tag="@string/kyc_tag_page_bg">
    <network.mintex.module_kyc.ui.widget.CustomNaviBar
        android:id="@+id/verify_id_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_left="@mipmap/navi_back"
        app:title=""/>
    <network.mintex.module_kyc.ui.widget.CustomProgressBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/verify_id_card_title"
        app:layout_constraintBottom_toBottomOf="@id/verify_id_card_title"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        app:max="@integer/kyc_max_progress"
        app:progress="3"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/font_22_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verify_id_card_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/kyc_selfie_liveness_capture_learn_title"
        android:textColor="@color/color_f2f2f2"
        android:tag="@string/kyc_tag_title"/>
    <TextView
        android:id="@+id/tv_subtitle_desc"
        style="@style/font_14_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/kyc_selfie_capture_learn_desc"
        android:textColor="@color/color_c4c4c4"
        android:tag="@string/kyc_tag_title_desc"/>
    <ImageView
        android:id="@+id/iv_item_index_bg_1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@id/tv_subtitle_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_desc"
        android:layout_marginTop="32dp"
        android:src="@drawable/shape_circle_st0d121d_bg34e59b"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_item_index_1"
        style="@style/font_14_regular"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:elevation="1px"
        android:text="1"
        android:textColor="@color/color_0d121d"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_index_bg_1"
        app:layout_constraintStart_toStartOf="@id/iv_item_index_bg_1"
        app:layout_constraintTop_toTopOf="@id/iv_item_index_bg_1"
        app:layout_constraintEnd_toEndOf="@id/iv_item_index_bg_1"
        android:tag="@string/kyc_tag_page_bg"/>
    <TextView
        android:id="@+id/tv_item_1"
        style="@style/font_14_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_item_index_bg_1"
        app:layout_constraintStart_toEndOf="@id/iv_item_index_bg_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="32dp"
        android:text="@string/kyc_selfie_capture_learn_item_1"
        android:textColor="@color/color_c4c4c4"
        android:tag="@string/kyc_tag_title_desc"/>
    <ImageView
        android:id="@+id/iv_item_index_bg_2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@id/iv_item_index_bg_1"
        app:layout_constraintTop_toBottomOf="@id/iv_item_index_bg_1"
        android:layout_marginTop="32dp"
        android:src="@drawable/shape_circle_st0d121d_bg34e59b"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_item_index_2"
        style="@style/font_14_regular"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:elevation="1px"
        android:text="2"
        android:textColor="@color/color_0d121d"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_index_bg_2"
        app:layout_constraintStart_toStartOf="@id/iv_item_index_bg_2"
        app:layout_constraintTop_toTopOf="@id/iv_item_index_bg_2"
        app:layout_constraintEnd_toEndOf="@id/iv_item_index_bg_2"
        android:tag="@string/kyc_tag_page_bg"/>
    <TextView
        android:id="@+id/tv_item_2"
        style="@style/font_14_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_item_index_bg_2"
        app:layout_constraintStart_toEndOf="@id/iv_item_index_bg_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="32dp"
        android:text="@string/kyc_selfie_capture_learn_item_2"
        android:textColor="@color/color_c4c4c4"
        android:tag="@string/kyc_tag_title_desc"/>
    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="170dp"
        android:layout_height="169dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="116dp"
        android:src="@mipmap/capture_liveness"/>
    <TextView
        android:id="@+id/tv_next"
        style="@style/font_14_bold"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="41dp"
        android:background="@drawable/shape_rect_bottom_btn_bg"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="#FFFFFF"
        android:tag="@string/kyc_tag_bottom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <include
        android:id="@+id/layout_power"
        layout="@layout/layout_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>