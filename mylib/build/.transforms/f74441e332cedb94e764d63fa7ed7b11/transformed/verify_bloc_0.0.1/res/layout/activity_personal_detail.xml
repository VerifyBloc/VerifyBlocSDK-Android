<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PersonalDetailActivity"
    android:background="@color/background"
    android:tag="@string/kyc_tag_page_bg">
    <network.mintex.module_kyc.ui.widget.CustomNaviBar
        android:id="@+id/personal_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_left="@mipmap/navi_back"
        app:title=""/>
    <network.mintex.module_kyc.ui.widget.CustomProgressBar
        android:id="@+id/processbar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/personal_detail_title"
        app:layout_constraintBottom_toBottomOf="@id/personal_detail_title"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        app:max="@integer/kyc_max_progress"
        app:progress="@integer/kyc_max_progress"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personal_detail_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/font_22_bold"
        android:textColor="#f2f2f2"
        android:text="@string/kyc_verify_process_personal_details"
        android:tag="@string/kyc_tag_title"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_notice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        style="@style/font_14_regular"
        android:textColor="#c4c4c4"
        android:text="@string/kyc_verify_process_personal_details_tip"
        android:tag="@string/kyc_tag_title_desc"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/font_14_bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/shape_rect_bottom_btn_bg"
        android:text="@string/confirm"
        android:tag="@string/kyc_tag_bottom_button"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tip"
        app:layout_constraintBottom_toTopOf="@id/tv_confirm"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider_h5">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect_personal_detail_tip_bg"
                android:tag="@string/kyc_tag_tip_bg">
                <ImageView
                    android:id="@+id/iv_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/kyc_verify_light"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tag="@string/kyc_tag_main_color"/>
                <TextView
                    android:id="@+id/tv_personal_details_tip"
                    style="@style/font_14_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/kyc_verify_process_personal_details_tip_2"
                    android:textColor="@color/color_c4c4c4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_light"
                    app:layout_constraintStart_toEndOf="@id/iv_light"
                    android:tag="@string/kyc_tag_title_desc"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_personal_details_tip"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:title="@string/kyc_verify_process_personal_details_first_name"/>

            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/kyc_verify_process_personal_details_middle_name"
                app:is_optional="true"/>

            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/kyc_verify_process_personal_details_last_name"/>

            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/kyc_verify_process_personal_details_date_of_birth"
                app:hint_text="dd / mm / yyyy"
                app:enable_input="false"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_gender_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/font_12_regular"
                    android:textColor="#899995"
                    android:text="@string/kyc_verify_process_personal_details_gender"
                    android:tag="@string/kyc_tag_title_desc"/>
                <TextView
                    android:id="@+id/tv_current_gender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_gender_title"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    style="@style/font_14_regular"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/color_f2f2f2"
                    android:hint="@string/select"
                    android:background="@drawable/shape_rect_personal_detail_input_bg"
                    android:paddingEnd="16dp"
                    android:tag="@string/kyc_tag_input_item"
                    app:drawableEndCompat="@mipmap/personal_detail_more" />
                <View
                    android:id="@+id/gender_error_bg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/tv_current_gender"
                    app:layout_constraintEnd_toEndOf="@id/tv_current_gender"
                    app:layout_constraintTop_toTopOf="@id/tv_current_gender"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_gender"
                    android:background="@drawable/shape_rect_personal_detail_input_error_bg"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tv_gender_error_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_gender"
                    android:layout_marginTop="5dp"
                    style="@style/font_12_regular"
                    android:textColor="#ea5e61"
                    android:text="@string/tip_this_field_is_required"
                    android:visibility="invisible"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_document_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/font_12_regular"
                    android:textColor="#899995"
                    android:text="@string/kyc_verify_process_personal_details_document_type"
                    android:tag="@string/kyc_tag_title_desc"/>
                <TextView
                    android:id="@+id/tv_current_document_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_document_type_title"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    style="@style/font_14_regular"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/color_f2f2f2"
                    android:paddingEnd="16dp"
                    android:tag="@string/kyc_tag_not_editable_textview"/>
                <View
                    android:id="@+id/document_type_error_bg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/tv_current_document_type"
                    app:layout_constraintEnd_toEndOf="@id/tv_current_document_type"
                    app:layout_constraintTop_toTopOf="@id/tv_current_document_type"
                    app:layout_constraintBottom_toBottomOf="@id/tv_current_document_type"
                    android:background="@drawable/shape_rect_personal_detail_input_error_bg"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tv_document_type_error_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_document_type"
                    android:layout_marginTop="5dp"
                    style="@style/font_12_regular"
                    android:textColor="#ea5e61"
                    android:text="@string/tip_this_field_is_required"
                    android:visibility="invisible"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/kyc_verify_process_personal_details_number"/>

            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_issue_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/kyc_verify_process_personal_details_issue_date"
                app:hint_text="dd / mm / yyyy"
                app:enable_input="false"/>

            <network.mintex.module_kyc.ui.widget.CustomTextInput
                android:id="@+id/cti_valid_until"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/kyc_verify_process_personal_details_valid_until"
                app:hint_text="dd / mm / yyyy"
                app:is_optional="true"
                app:enable_input="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        android:id="@+id/layout_power"
        layout="@layout/layout_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>