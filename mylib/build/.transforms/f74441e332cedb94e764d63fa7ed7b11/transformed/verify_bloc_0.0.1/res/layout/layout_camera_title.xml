<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:tag="@string/kyc_tag_page_bg">
    <View
        android:id="@+id/hotspot_back"
        android:layout_width="@dimen/top_bar_height"
        android:layout_height="@dimen/top_bar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hotspot_back"
        app:layout_constraintTop_toTopOf="@id/hotspot_back"
        app:layout_constraintBottom_toBottomOf="@id/hotspot_back"
        app:layout_constraintEnd_toEndOf="@id/hotspot_back"
        android:src="@mipmap/navi_back" />
    <network.mintex.module_kyc.ui.widget.CustomProgressBar
        android:id="@+id/kyc_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        app:max="@integer/kyc_max_progress"
        app:progress="1"
        android:tag="@string/kyc_tag_main_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>