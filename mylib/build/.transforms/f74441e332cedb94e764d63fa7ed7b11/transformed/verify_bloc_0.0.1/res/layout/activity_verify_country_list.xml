<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VerifyCountryListActivity"
    android:background="@color/background"
    android:tag="@string/kyc_tag_page_bg">
    <network.mintex.module_kyc.ui.widget.CustomNaviBar
        android:id="@+id/verify_id_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_left="@mipmap/navi_close"
        app:title=""/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verify_id_card_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        style="@style/font_22_bold"
        android:textColor="@color/color_f2f2f2"
        android:text="@string/kyc_verify_country"
        android:tag="@string/kyc_tag_title"/>
    <TextView
        android:id="@+id/tv_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_search"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/font_14_regular"
        android:textColor="@color/color_f2f2f2"
        android:text="@string/cancel"
        android:tag="@string/kyc_tag_title_desc"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_search_cancel"
        app:layout_constraintTop_toBottomOf="@id/tv_notice"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/selector_team_member_search"
        android:drawableStart="@mipmap/icon_search"
        android:paddingStart="12dp"
        android:paddingEnd="42dp"
        android:drawablePadding="12dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLength="10"
        android:lines="1"
        style="@style/font_14_regular"
        android:textColorHint="@color/color_707070"
        android:hint="@string/earning_team_search_hint"
        android:textColor="#0d121d"
        android:text=""
        android:tag="@string/kyc_tag_main_color"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_search_cancel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/et_search"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintEnd_toEndOf="@id/et_search"
        android:visibility="invisible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/search_delete"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_country_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/tv_search_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        style="@style/font_14_regular"
        android:textColor="@color/color_f2f2f2"
        android:text="@string/kyc_country_search_no_result"
        android:tag="@string/kyc_tag_title_desc"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>