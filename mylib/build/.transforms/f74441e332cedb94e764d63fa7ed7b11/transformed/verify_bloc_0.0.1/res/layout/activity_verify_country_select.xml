<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VerifyCountrySelectActivity"
    android:background="@color/background"
    android:tag="@string/kyc_tag_page_bg">
    <network.mintex.module_kyc.ui.widget.CustomNaviBar
        android:id="@+id/verify_id_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_left="@mipmap/navi_back"
        app:title=""/>
    <network.mintex.module_kyc.ui.widget.CustomProgressBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/verify_id_card_title"
        app:layout_constraintBottom_toBottomOf="@id/verify_id_card_title"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        app:max="@integer/kyc_max_progress"
        app:progress="1"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verify_id_card_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        style="@style/font_22_bold"
        android:textColor="@color/color_f2f2f2"
        android:text="@string/kyc_verify_id_card_where_issue"
        android:tag="@string/kyc_tag_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_issued"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/tv_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_rect_country_item"
        android:tag="@string/kyc_tag_input_item">
        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_current_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_flag"
            app:layout_constraintBottom_toBottomOf="@id/iv_flag"
            app:layout_constraintStart_toEndOf="@id/iv_flag"
            android:layout_marginStart="12dp"
            style="@style/font_16_regular"
            android:textColor="@color/color_f2f2f2"
            android:tag="@string/kyc_tag_title"/>
        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="23dp"
            android:src="@mipmap/verify_go"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintBottom_toTopOf="@id/tv_tip"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        style="@style/font_14_bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/shape_rect_bottom_btn_bg"
        android:text="@string/next"
        android:tag="@string/kyc_tag_bottom_button"/>
    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="151dp"
        android:layout_marginBottom="63dp"
        android:src="@mipmap/kyc_verify_light"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_light"
        app:layout_constraintStart_toEndOf="@id/iv_light"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/global_margin_bottom"
        android:gravity="top"
        style="@style/font_14_regular"
        android:textColor="@color/color_c4c4c4"
        android:text="Can't find your document type or country of issue? contact us"/>
    <include
        android:id="@+id/layout_power"
        layout="@layout/layout_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>