<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VerifyDocumentActivity"
    android:background="@color/background"
    android:tag="@string/kyc_tag_page_bg">
    <network.mintex.module_kyc.ui.widget.CustomNaviBar
        android:id="@+id/verify_id_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title=""/>
    <network.mintex.module_kyc.ui.widget.CustomProgressBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/verify_id_card_title"
        app:layout_constraintBottom_toBottomOf="@id/verify_id_card_title"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        app:max="@integer/kyc_max_progress"
        app:progress="2"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verify_id_card_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        style="@style/font_22_bold"
        android:textColor="@color/color_f2f2f2"
        android:text="@string/kyc_verify_document_what_provide"
        android:tag="@string/kyc_tag_title"/>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notice"
        android:layout_marginTop="41dp"
        android:layout_marginStart="31dp"
        app:flexWrap="wrap"
        app:showDividerHorizontal="middle"
        app:dividerDrawable="@drawable/divider_documents_vertical">
        <LinearLayout
            android:id="@+id/layout_id_card"
            android:layout_width="150dp"
            android:layout_height="122dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_document_item_bg"
            android:tag="@string/kyc_tag_main_color">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/kyc_document_id_card"
                android:tag="@string/kyc_tag_main_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_14_regular"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_f2f2f2"
                android:text="@string/kyc_verify_document_id_card"
                android:tag="@string/kyc_tag_title_desc"/>
        </LinearLayout>
        <View
            android:layout_width="12dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/layout_passport"
            android:layout_width="150dp"
            android:layout_height="122dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_document_item_bg"
            android:tag="@string/kyc_tag_main_color">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/kyc_document_passport"
                android:tag="@string/kyc_tag_main_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_14_regular"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_f2f2f2"
                android:text="@string/kyc_verify_document_passport"
                android:tag="@string/kyc_tag_title_desc"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_driver_license"
            android:layout_width="150dp"
            android:layout_height="122dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rect_document_item_bg"
            android:tag="@string/kyc_tag_main_color">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/kyc_document_driver_license"
                android:tag="@string/kyc_tag_main_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_14_regular"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/color_f2f2f2"
                android:text="@string/kyc_verify_document_driver_license"
                android:tag="@string/kyc_tag_title_desc"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="151dp"
        android:layout_marginBottom="63dp"
        android:src="@mipmap/kyc_verify_light"
        android:tag="@string/kyc_tag_main_color"/>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_light"
        app:layout_constraintStart_toEndOf="@id/iv_light"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/global_margin_bottom"
        android:gravity="top"
        style="@style/font_14_regular"
        android:textColor="@color/color_c4c4c4"
        android:text="Can't find your document type or country of issue? contact us"
        android:tag="@string/kyc_tag_tip"/>
    <include
        android:id="@+id/layout_power"
        layout="@layout/layout_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>