<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CaptureResultActivity"
    android:background="@color/background"
    android:tag="@string/kyc_tag_page_bg">
    <network.mintex.module_kyc.ui.widget.CustomCameraTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/font_22_bold"
        android:textColor="#FFFFFF"
        android:text="@string/kyc_verify_process_capture_id_card_front"
        android:tag="@string/kyc_tag_title"/>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        style="@style/font_14_regular"
        android:textColor="#C2CFE0"
        android:text="@string/kyc_verify_process_capture_id_card_front_tip"
        android:tag="@string/kyc_tag_title_desc"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_capture_picture"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintBottom_toTopOf="@id/tv_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="41dp"
        android:maxWidth="311dp"
        android:maxHeight="415dp"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundedCornersImageView"
        app:strokeColor="@null"/>
    <TextView
        android:id="@+id/tv_next"
        style="@style/font_14_bold"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_rect_bottom_btn_bg"
        android:gravity="center"
        android:text="@string/kyc_verify_process_capture_go_ahead"
        android:textColor="#FFFFFF"
        android:tag="@string/kyc_tag_bottom_button"
        app:layout_constraintBottom_toTopOf="@id/tv_retake"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tv_retake"
        style="@style/font_14_bold"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="@string/capture_retake"
        android:textColor="#FFFFFF"
        android:tag="@string/kyc_tag_title"
        app:layout_constraintBottom_toTopOf="@id/layout_power"
        app:layout_constraintStart_toStartOf="parent" />
    <include
        android:id="@+id/layout_power"
        layout="@layout/layout_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>