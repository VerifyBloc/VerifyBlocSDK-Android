<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height">
    <View
        android:id="@+id/back_hot_spot"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/back_hot_spot"
        app:layout_constraintEnd_toEndOf="@id/back_hot_spot"
        app:layout_constraintTop_toTopOf="@id/back_hot_spot"
        app:layout_constraintBottom_toBottomOf="@id/back_hot_spot"
        android:src="@mipmap/navi_back"
        android:tag="@string/kyc_tag_top_left_icon"/>
    <TextView
        android:id="@+id/tv_title"
        style="@style/font_16_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#F2F2F2"
        android:text="MintNow"/>
</androidx.constraintlayout.widget.ConstraintLayout>