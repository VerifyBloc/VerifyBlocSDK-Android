<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/bottom_sheet_dialog_bg"
        android:scaleType="centerCrop"
        android:tag="@string/kyc_tag_page_bg"/>
    <ImageView
        android:id="@+id/btn_drop_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/drop_down_dark"
        android:tag="@string/kyc_tag_icon_drop_down"/>
    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_drop_down">
        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="18dp"
            android:paddingStart="20dp"
            style="@style/font_16_regular"
            android:button="@drawable/selector_gender"
            android:textColor="#FFFFFF"
            android:text="@string/male"
            android:tag="@string/kyc_tag_radio_button"/>
        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="18dp"
            android:paddingStart="20dp"
            style="@style/font_16_regular"
            android:button="@drawable/selector_gender"
            android:textColor="#FFFFFF"
            android:text="@string/female"
            android:tag="@string/kyc_tag_radio_button"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>