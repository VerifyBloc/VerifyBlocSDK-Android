<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="-10dp"
    android:layout_marginEnd="-10dp">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CustomTextFieldLayoutTheme"
        android:paddingTop="18dp"
        android:paddingStart="28dp"
        android:gravity="center_vertical"
        android:hint="@string/kyc_verify_process_personal_details_first_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#f2f2f2"
            android:textColorHint="#979797"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_34e69b"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tv_limit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="28dp"
        style="@style/font_12_regular"
        android:textColor="#979797"
        android:text="0/25"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_input"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="18dp"
        style="@style/font_12_regular"
        android:drawableStart="@mipmap/text_input_error_icon"
        android:drawablePadding="4dp"
        android:textColor="#ea5e61"
        android:text="@string/tip_this_field_is_required"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>