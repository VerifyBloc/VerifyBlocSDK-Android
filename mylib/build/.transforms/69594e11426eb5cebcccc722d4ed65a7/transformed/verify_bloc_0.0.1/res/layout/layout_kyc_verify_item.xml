<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_title_bg"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="11dp"
        android:src="@drawable/shape_rect_item_top_bg"
        android:tag="@string/kyc_tag_item_top_bg"/>
    <ImageView
        android:id="@+id/iv_title_desc_bg"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/iv_title_bg"
        app:layout_constraintStart_toStartOf="@id/iv_title_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_title_bg"
        android:src="@drawable/shape_rect_item_bottom_bg"
        android:tag="@string/kyc_tag_item_bottom_bg"/>
    <ImageView
        android:id="@+id/iv_item_index_bg_1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_title_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_title_bg"
        android:src="@drawable/shape_circle_st0d121d_bg34e59b"
        android:tag="@string/kyc_tag_main_color"/>
    <ImageView
        android:id="@+id/iv_item_index_bg_2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_title_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_title_bg"
        android:src="@mipmap/verify_status_under_review"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_title"
        style="@style/font_16_bold"
        android:layout_width="300dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_title_bg"
        app:layout_constraintStart_toEndOf="@id/iv_item_index_bg_1"
        app:layout_constraintTop_toTopOf="@id/iv_title_bg"
        android:layout_marginStart="9dp"
        android:elevation="1px"
        android:gravity="center_vertical"
        android:tag="@string/kyc_tag_item_title"
        android:text="Verify Identity"
        android:textColor="#67797d"/>
    <TextView
        android:id="@+id/tv_item_index_1"
        style="@style/font_14_regular"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:elevation="1px"
        android:text="1"
        android:textColor="@color/color_0d121d"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_index_bg_1"
        app:layout_constraintStart_toStartOf="@id/iv_item_index_bg_1"
        app:layout_constraintTop_toTopOf="@id/iv_item_index_bg_1"
        app:layout_constraintEnd_toEndOf="@id/iv_item_index_bg_1"
        android:tag="@string/kyc_tag_page_bg"/>
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kyc_verify_passport"
        app:layout_constraintBottom_toBottomOf="@id/iv_title_desc_bg"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/iv_title_desc_bg"
        android:tag="@string/kyc_tag_main_color"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/iv_icon_keeper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/kyc_verify_passport"
        app:layout_constraintBottom_toBottomOf="@id/iv_title_desc_bg"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/iv_title_desc_bg"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_content"
        style="@style/font_14_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:tag="@string/kyc_tag_item_desc"
        android:text="desc"
        android:textColor="#c2cfe0"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        app:layout_constraintEnd_toEndOf="@id/iv_title_desc_bg"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="@id/iv_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>