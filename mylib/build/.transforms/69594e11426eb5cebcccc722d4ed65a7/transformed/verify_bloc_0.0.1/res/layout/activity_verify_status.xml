<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VerifyStatusActivity"
    android:tag="@string/kyc_tag_page_bg">
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="center"
        android:src="@mipmap/navi_close"/>
    <LinearLayout
        android:id="@+id/layout_verify_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_close"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/font_22_bold"
            android:textColor="@color/color_f2f2f2"
            android:text="@string/kyc_verify_status_title"
            android:tag="@string/kyc_tag_title"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_rect_r8_bgfff0d8"
            style="@style/font_16_bold"
            android:textColor="#d38a13"
            android:text="@string/kyc_verify_status_under_review"/>
        <TextView
            android:id="@+id/tv_status_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            style="@style/font_14_regular"
            android:textColor="@color/color_c4c4c4"
            android:text="@string/kyc_verify_status_under_review_tip"
            android:tag="@string/kyc_tag_title_desc"/>
        <network.mintex.module_kyc.ui.widget.VerifyIdentityItem
            android:id="@+id/vii_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:kyc_title="@string/kyc_verify_identity_document"
            app:kyc_index=""
            app:kyc_index_bg="@mipmap/verify_status_under_review"
            app:kyc_icon="@mipmap/kyc_document_id_card_under_review"
            app:kyc_keep_icon_style="true"
            app:kyc_content="@string/kyc_verify_identity_photo_of_your_id_or_passport"/>
        <network.mintex.module_kyc.ui.widget.VerifyIdentityItem
            android:id="@+id/vii_selfie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:kyc_title="@string/kyc_verify_identity_selfie"
            app:kyc_index=""
            app:kyc_index_bg="@mipmap/verify_status_under_review"
            app:kyc_icon="@mipmap/kyc_verify_selfie_under_review"
            app:kyc_keep_icon_style="true"
            app:kyc_content="@string/kyc_verify_identity_photo_of_you"/>
        <network.mintex.module_kyc.ui.widget.VerifyIdentityItem
            android:id="@+id/vii_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:kyc_title="@string/kyc_verify_identity_personal_detail"
            app:kyc_index=""
            app:kyc_index_bg="@mipmap/verify_status_under_review"
            app:kyc_icon="@mipmap/kyc_verify_full_legal_name_under_review"
            app:kyc_keep_icon_style="true"
            app:kyc_content="@string/kyc_verify_identity_complete_with_your_personal_detail"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bottom_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="42dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/kyc_verify_light"
            android:tag="@string/kyc_tag_main_color"/>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_light"
            app:layout_constraintBottom_toBottomOf="@id/iv_light"
            app:layout_constraintStart_toEndOf="@id/iv_light"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="12dp"
            style="@style/font_14_regular"
            android:textColor="@color/color_c4c4c4"
            android:text="Question? Contact us"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_ok"
        style="@style/font_14_bold"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_rect_bottom_btn_bg"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="#FFFFFF"
        android:tag="@string/kyc_tag_bottom_button"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom_tip"
        app:layout_constraintStart_toStartOf="parent" />
    <include
        android:id="@+id/layout_power"
        layout="@layout/layout_powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>